# CARLA Docker Environment Configuration
# Copy this file to .env and customize for your setup

# Display Configuration
DISPLAY=:0
# XAUTHORITY=/home/youruser/.Xauthority
# XDG_RUNTIME_DIR=/run/user/1000
# WAYLAND_DISPLAY=wayland-0

# Platform Configuration
# Options: linux/amd64, linux/arm64
TARGETPLATFORM=linux/amd64
BUILDPLATFORM=linux/amd64

# Docker Runtime
# Options: nvidia, runc
# Use 'nvidia' for GPU support on both x86 and Jetson
DOCKER_RUNTIME=nvidia

# Docker Privileges
# Set to true if you have controller issues
DOCKER_PRIVILEGED=false

# Resource Limits
DOCKER_CPUS=8
DOCKER_MEMORY=16G

# NVIDIA GPU Configuration
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=all

# CARLA Server Settings
CARLA_PORT=2000
CARLA_STREAMING_PORT=2001

# CARLA Graphics Settings
# Quality: Low, Medium, High, Epic
CARLA_QUALITY=Epic
CARLA_RES_X=1920
CARLA_RES_Y=1080
CARLA_OFFSCREEN=false
CARLA_OPENGL=false

# Controller Settings
# Types: g27, g29, g920, driving_force_gt, generic
CONTROLLER_TYPE=g29
FORCE_FEEDBACK=true

# SDL Video Driver
# Options: x11, wayland
SDL_VIDEODRIVER=x11
